<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="356dp"
        android:layout_marginBottom="98dp"
        android:text="hi guys"
        app:layout_constraintBottom_toTopOf="@+id/btnManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnManager"
        android:layout_width="244dp"
        android:layout_height="0dp"
        android:layout_marginTop="473dp"
        android:layout_marginBottom="32dp"
        android:background="#FF4081"
        android:text="manager"
        android:textColor="#FFD452"
        app:layout_constraintBottom_toTopOf="@+id/btnClient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnClient"
        android:layout_width="251dp"
        android:layout_height="0dp"
        android:layout_marginBottom="122dp"
        android:background="#18FFFF"
        android:text="Client"
        android:textColor="#FF5252"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnManager" />

</androidx.constraintlayout.widget.ConstraintLayout>